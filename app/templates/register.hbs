
      {{#if signupComplete}}
        <div class="row">
         <div class="col-md-5">
            
            <h1><small>Welcome! Signup Process Completed</small></h1>
         </div>
        </div>
      {{else}}
      <div class="row" style="margin-top: 100px;">
                <form {{action 'register' on='submit'}} class="form-horizontal">
                    <div class="form-group">
                      <div class="control-label col-sm-2">
                        <label for="username">Login</label>
                      </div>
                      <div class="col-sm-10">
                        {{input id='username' placeholder='Enter Username' value=username }}
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="control-label col-sm-2">
                        <label for="email">Email</label>
                      </div>
                      <div class="col-sm-10">
                        {{input id='email' placeholder='Enter Valid Email' value=email}}
                      </div>
                    </div>
                    <div class="form-group">
                     <div class="control-label col-sm-2">
                      <label for="password">Password</label>
                    </div>
                     <div class="col-sm-10">
                      {{input id='password' placeholder='Enter Password' type='password' value=password}}
                    </div>
                    </div>

                     <div class="form-group">
                     <div class="control-label col-sm-2">
                      <label for="confirm_password">Confirm Password</label>
                    </div>
                     <div class="col-sm-10">
                       {{input id='confirm_password' placeholder='Confirm Password' type='password' value=confirm_password}}
                    </div>
                    </div>
                   
                    <div>
                      <div class="col-md-2"></div>
                      <div class="col-md-3">
                       <button type="submit" class="btn btn-primary">Sign Up</button>
                      </div>
                    </div>

                    {{#if error}}
                    <p>{{error}}</p>
                    {{/if}}
        </form>


      </div>

   {{/if}} 







